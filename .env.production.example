# Environment variables for production deployment
# Copy this file to .env and fill in the actual values

# JWT Configuration (REQUIRED - Generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Toss Payments Configuration (REQUIRED for payment functionality)
TOSS_CLIENT_KEY=your-toss-client-key
TOSS_SECRET_KEY=your-toss-secret-key
TOSS_SUCCESS_URL=https://yourdomain.com/payment/success
TOSS_FAIL_URL=https://yourdomain.com/payment/fail

# Optional: Custom domain for CORS
CORS_ORIGINS=https://yourdomain.com

# Optional: Frontend URL
FRONTEND_URL=https://yourdomain.com
